// tiempo
`timescale 1ns / 1ps
// módulo para el testbench
module decoder_7seg_tb();

    reg [3:0] decoder_in;
    wire [0:6] decoder_out;
    
    // instancia del módulo
    decoder_7seg DUT (
        .decoder_in(decoder_in),
        .decoder_out(decoder_out)
    );
    
 // iniciamos las pruebas
 initial 
	 begin
	  // probamos todos los valores posibles de entrada (0 a 15)
	  decoder_in = 4'd0;  #10;
	  decoder_in = 4'd1;  #10;
	  decoder_in = 4'd2;  #10;
	  decoder_in = 4'd3;  #10;
	  decoder_in = 4'd4;  #10;
	  decoder_in = 4'd5;  #10;
	  decoder_in = 4'd6;  #10;
	  decoder_in = 4'd7;  #10;
	  decoder_in = 4'd8;  #10;
	  decoder_in = 4'd9;  #10;
	  decoder_in = 4'd10; #10;
	  decoder_in = 4'd11; #10;
	  decoder_in = 4'd12; #10;
	  decoder_in = 4'd13; #10;
	  decoder_in = 4'd14; #10;
	  decoder_in = 4'd15; #10;
	  
	  $stop;
	  $finish;
    end

endmodule
