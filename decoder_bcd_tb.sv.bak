`timescale 1ns/100ps

module decoder_BCD_tb();

// entradas 10 switches es reg 
reg [N-1:0] BCD_in_sw;

// salidas 4 bits son los segmentos es wire
wire [0:6] display_unidad;
wire [0:6] display_decena;
wire [0:6] display_centena;
wire [0:6] display_miles;

// 
BCD DUT(
	.BCD_in_sw(BCD_in_sw),
	.display_unidad(display_unidad),
	.display_decena(display_decena),
	.display_miles(display_miles)
);

// creamos un tarea para generar números randoms
task set_input();
	BCD_in_sw = $urandom_range(0,2**N-1); // números random dede 0 a 1023
	display("Valor a probar = %d", BDC_in_sw)
	#10;

endtask

// variable para usar en el `for`
integer i;

initial
begin
	for (i=0; i<ITERACIONES; i=i+1) // declaramos la condición 
	begin
		set_input(); // task de números radoms
	end
end

endmodule